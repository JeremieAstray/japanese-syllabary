<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<AnchorPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="400.0" minWidth="600.0" prefHeight="400.0"
            prefWidth="600.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.jeremie.springfx.controller.MainController">
    <children>
        <Label fx:id="content" alignment="CENTER" contentDisplay="CENTER" text="a" textAlignment="CENTER"
               AnchorPane.bottomAnchor="150.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
               AnchorPane.topAnchor="0.0">
            <font>
                <Font size="40.0"/>
            </font>
        </Label>
        <GridPane alignment="CENTER" layoutY="250.0" prefHeight="150.0" prefWidth="600.0" AnchorPane.bottomAnchor="0.0"
                  AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="80.0"/>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="80.0"/>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="80.0"/>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="80.0"/>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="80.0"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            </rowConstraints>
            <children>
                <Button alignment="CENTER" mnemonicParsing="false" onAction="#showFullContent" prefHeight="50.0"
                        prefWidth="80.0" text="完整(读音)" GridPane.columnIndex="4" GridPane.halignment="CENTER"
                        GridPane.valignment="CENTER"/>
                <Button alignment="CENTER" mnemonicParsing="false" onAction="#showRoma" prefHeight="50.0"
                        prefWidth="80.0" text="罗马音" GridPane.columnIndex="3" GridPane.halignment="CENTER"
                        GridPane.valignment="CENTER"/>
                <Button alignment="CENTER" mnemonicParsing="false" onAction="#showtKatakana" prefHeight="50.0"
                        prefWidth="80.0" text="片假名" GridPane.columnIndex="2" GridPane.halignment="CENTER"
                        GridPane.valignment="CENTER"/>
                <Button alignment="CENTER" mnemonicParsing="false" onAction="#showHiragana" prefHeight="50.0"
                        prefWidth="80.0" text="平假名" GridPane.columnIndex="1" GridPane.halignment="CENTER"
                        GridPane.valignment="CENTER"/>
                <Button alignment="CENTER" mnemonicParsing="false" onAction="#random" prefHeight="50.0" prefWidth="80.0"
                        text="随机" GridPane.columnIndex="0" GridPane.halignment="CENTER" GridPane.valignment="CENTER"/>
            </children>
        </GridPane>
        <GridPane alignment="CENTER" prefHeight="150.0" prefWidth="600.0" AnchorPane.leftAnchor="0.0"
                  AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <children>
                <Button alignment="CENTER" mnemonicParsing="false" onAction="#changeMapPane" prefHeight="50.0"
                        prefWidth="80.0" text="五十音图" GridPane.columnIndex="0" GridPane.halignment="CENTER"
                        GridPane.valignment="CENTER"/>
            </children>
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="80.0"/>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="80.0"/>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="80.0"/>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="80.0"/>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="80.0"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            </rowConstraints>
        </GridPane>
    </children>
</AnchorPane>
